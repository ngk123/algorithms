#include<bits/stdc++.h>
using namespace std;

int main()
{

	int T,a[100005],i,n,ans;
	long long int ans;
	cin >>T;
	while(T--)
	{
		cin >>n;
		for(i=0;i<n;i++)
		{
			cin >> a[i];		
		}
		
		sort(a,a+n);
		ans=0;
		for(i=n-1;i>=0;i-=2)
		{
			ans+=a[i];
		}		
		cout << ans << endl;
	
	}



return 0;
}
